<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timer"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/mont"
                android:gravity="center"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Timer"
                android:letterSpacing=".1"
                android:textColor="@color/title"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/Timer"
                android:layout_below="@id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="90dp"
                android:fontFamily="@font/mont"
                android:gravity="center"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="00:00"
                android:letterSpacing=".1"
                android:textColor="@color/paleBlack"
                android:textSize="140sp" />

            <android.widget.Button
                android:id="@+id/btnStart"
                android:layout_below="@id/Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button6"
                android:fontFamily="@font/arisb"
                android:layout_marginStart="250dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Start"
                android:letterSpacing=".1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <android.widget.Button
                android:id="@+id/btnReset"
                android:layout_below="@id/Timer"
                android:layout_toEndOf="@id/btnStart"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button6"
                android:fontFamily="@font/arisb"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Reset"
                android:letterSpacing=".1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="50sp" />


            <EditText
                android:id="@+id/edit_text_input"
                android:layout_below="@id/btnStart"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:hint="Minutes"
                android:letterSpacing=".1"
                android:textSize="30sp"
                android:inputType="number"
                android:maxLength="4" />

            <android.widget.Button
                android:id="@+id/button_set"
                android:layout_below="@id/edit_text_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button6"
                android:fontFamily="@font/arisb"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Set"
                android:letterSpacing=".1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <android.widget.Button
                android:id="@+id/btnBack"
                android:layout_below="@id/button_set"
                android:layout_width="735dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button5"
                android:fontFamily="@font/arisb"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Back"
                android:letterSpacing=".1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>