<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTask">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="132dp"
                android:fontFamily="@font/mont"
                android:gravity="center"
                android:letterSpacing=".1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="My Tasks"
                android:textColor="@color/title"
                android:textSize="90sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont"
                android:gravity="center"
                android:letterSpacing=".1"
                android:text="mm-dd-yy"
                android:textColor="#545454"
                android:textSize="45dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/myTask"
                app:layout_constraintStart_toStartOf="@+id/myTask"
                app:layout_constraintTop_toBottomOf="@+id/myTask" />

            <EditText
                android:id="@+id/Etask"
                android:layout_width="597dp"
                android:layout_height="59dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="3dp"
                android:autofillHints="Enter Task"
                android:fontFamily="@font/arisb"
                android:hint="Enter Task"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/date"
                app:layout_constraintStart_toStartOf="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <TextView
                android:id="@+id/pkatime"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Etask"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/arisb"
                android:hint="Pick a time"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/Etask"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Etask"
                app:layout_constraintTop_toBottomOf="@+id/Etask" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="420dp"
                android:layout_height="1dp"
                android:layout_below="@id/pkatime"
                android:layout_marginTop="72dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/Etask"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Etask"
                app:layout_constraintTop_toBottomOf="@+id/Etask" />

            <android.widget.Button
                android:id="@+id/settme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button5"
                android:fontFamily="@font/arisb"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Set Time"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/Etask"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/Etask"
                app:layout_constraintTop_toBottomOf="@+id/Etask" />

            <android.widget.Button
                android:id="@+id/btnSaveTask"
                android:layout_width="735dp"
                android:layout_height="89dp"
                android:layout_below="@id/pkatime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/button5"
                android:fontFamily="@font/arisb"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/Etask"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="@+id/Etask"
                app:layout_constraintTop_toBottomOf="@+id/Etask" />

            <android.widget.Button
                android:id="@+id/btnBack"
                android:layout_width="735dp"
                android:layout_height="89dp"
                android:layout_below="@id/btnSaveTask"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button5"
                android:fontFamily="@font/arisb"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/btnSaveTask"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btnSaveTask"
                app:layout_constraintTop_toBottomOf="@+id/btnSaveTask"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>