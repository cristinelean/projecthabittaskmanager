<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splashscreen1"
        android:layout_width="311dp"
        android:layout_height="305dp"
        android:layout_above="@+id/splashscreen2"
        android:layout_alignEnd="@+id/splashscreen2"
        android:src="@drawable/splashscreen1" />

    <ImageView
        android:id="@+id/splashscreen2"
        android:layout_width="311dp"
        android:layout_height="355dp"
        android:layout_above="@+id/splashscreen3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/splashscreen2" />

    <TextView
        android:id="@+id/splashscreen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/arisb"
        android:text="Your All-Around Productivity Companion"
        android:textSize="30sp"
        android:textColor="#545454"
        android:textStyle="bold" />

</RelativeLayout>


