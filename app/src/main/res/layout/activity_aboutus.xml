<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="-15dp"
            android:fontFamily="@font/mont"
            android:gravity="center"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="About Us"
            android:textColor="@color/title"
            android:textSize="40sp" />

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:background="@drawable/frame"
            android:padding="25dp">

            <ImageView
                android:layout_width="364dp"
                android:layout_height="127dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/aboutuspic" />

            <TextView
                android:id="@+id/textStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/arisb"
                android:gravity="center_horizontal"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="This is our story."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textStory2"
                android:layout_width="293dp"
                android:layout_height="76dp"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/arisb"
                android:justificationMode="inter_word"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Our logo is a dragonfly shaped hourglass which symbolizes change, transformation, adaptability, and self-realization which are considered as the key recipes in order to fulfill our goals."
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textStory3"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="245dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/arisb"
                android:justificationMode="inter_word"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="The Habit Task Manager Application aims to help our end users to achieve these through our easy-to-access notes, monthly planner, and timer."
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textStory4"
                android:layout_width="293dp"
                android:layout_height="76dp"
                android:layout_marginTop="320dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/arisb"
                android:gravity="center_horizontal"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Created by: Lean Cristine Bugay and Tomas Emmanuel Albero"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </FrameLayout>

        <android.widget.Button
            android:id="@+id/btnBack"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button5"
            android:fontFamily="@font/arisb"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>
</RelativeLayout>