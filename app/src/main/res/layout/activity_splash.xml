<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splashscreen1"
        android:layout_width="311dp"
        android:layout_height="305dp"
        android:layout_above="@+id/splashscreen2"
        android:layout_alignEnd="@+id/splashscreen2"
        android:src="@drawable/splashscreen1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/splashscreen2"
        android:layout_width="311dp"
        android:layout_height="305dp"
        android:layout_above="@+id/splashscreen3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/splashscreen2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashscreen1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/splashscreen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/arisb"
        android:text="Your All-Around Productivity Companion"
        android:textColor="#545454"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashscreen2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


